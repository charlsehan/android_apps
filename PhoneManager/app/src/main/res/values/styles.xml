<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionButtonStyle">
        <item name="android:layout_width">@dimen/action_button_width</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:background">@drawable/action_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BigButtonStyle">
        <item name="android:layout_width">@dimen/big_button_width</item>
        <item name="android:layout_height">@dimen/big_button_height</item>
        <item name="android:background">@drawable/big_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
