<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cloudminds.opstester.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts_read"
        android:id="@+id/contacts_read"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calllog_read"
        android:id="@+id/calllog_read"
        android:layout_below="@+id/contacts_write"
        android:layout_alignStart="@+id/contacts_write" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calllog_write"
        android:id="@+id/calllog_write"
        android:layout_below="@+id/calllog_read"
        android:layout_alignStart="@+id/calllog_read" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_read"
        android:id="@+id/sms_read"
        android:layout_below="@+id/calllog_write"
        android:layout_alignStart="@+id/calllog_write" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_write"
        android:id="@+id/sms_write"
        android:layout_below="@+id/sms_read"
        android:layout_alignStart="@+id/sms_read"
        android:onClick="onClick (MainActivity)" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Switch"
        android:id="@+id/switch1"
        android:layout_below="@+id/sms_write"
        android:layout_alignStart="@+id/sms_write"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts_write"
        android:id="@+id/contacts_write"
        android:layout_below="@+id/contacts_read"
        android:layout_alignStart="@+id/contacts_read" />

</RelativeLayout>
